@model JokesWebApp.Models.Joke
@{
    ViewData["Title"] = "Delete Joke";
}
<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <div class="card shadow-sm border-danger">
            <div class="card-header bg-danger text-white">
                <h3 class="mb-0"><i class="bi bi-trash"></i> Delete Joke</h3>
            </div>
            <div class="card-body">
                <h5 class="text-danger">Are you sure you want to delete this joke?</h5>
                <dl class="row mb-0">
                    <dt class="col-sm-4">Question</dt>
                    <dd class="col-sm-8">@Model.JokeQuestion</dd>
                    <dt class="col-sm-4">Answer</dt>
                    <dd class="col-sm-8">@Model.JokeAnswer</dd>
                </dl>
            </div>
            <div class="card-footer bg-white border-0 d-flex justify-content-between">
                <form asp-action="Delete" class="mb-0">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Delete</button>
                </form>
                <a asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Back to List</a>
            </div>
        </div>
    </div>
</div>
