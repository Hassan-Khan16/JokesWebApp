<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-light">
                <h3 class="mb-0"><i class="bi bi-search"></i> Search for a Joke</h3>
            </div>
            <div class="card-body">
                <form asp-action="ShowSearchResults">
                    <div class="mb-3">
                        <label for="SearchPhrase" class="form-label">Search Phrase</label>
                        <input name="SearchPhrase" class="form-control" placeholder="Type a keyword..." />
                    </div>
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Back to List</a>
                        <button type="submit" class="btn btn-primary"><i class="bi bi-search"></i> Search</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>