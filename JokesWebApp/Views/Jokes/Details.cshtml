@model JokesWebApp.Models.Joke
@{
    ViewData["Title"] = "Joke Details";
}
<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-info text-white">
                <h3 class="mb-0"><i class="bi bi-info-circle"></i> Joke Details</h3>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4">Question</dt>
                    <dd class="col-sm-8">@Model.JokeQuestion</dd>
                    <dt class="col-sm-4">Answer</dt>
                    <dd class="col-sm-8">@Model.JokeAnswer</dd>
                </dl>
            </div>
            <div class="card-footer bg-white border-0 d-flex justify-content-between">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-primary"><i class="bi bi-pencil"></i> Edit</a>
                <a asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Back to List</a>
            </div>
        </div>
    </div>
</div>
