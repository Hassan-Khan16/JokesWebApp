@model IEnumerable<JokesWebApp.Models.Joke>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JokesWebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/JokesWebApp.styles.css" asp-append-version="true" />
</head>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Jokes</h2>
        <a class="btn btn-success" asp-action="Create">
            <span class="bi bi-plus-circle"></span> Create New Joke
        </a>
    </div>
    <form asp-action="ShowSearchResults" method="post" class="mb-3 d-flex">
        <input type="text" name="SearchPhrase" class="form-control me-2" placeholder="Search jokes..." />
        <button type="submit" class="btn btn-outline-primary">Search</button>
    </form>
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Question</th>
                <th>Answer</th>
                <th style="width: 180px;">Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.JokeQuestion</td>
                <td>@item.JokeAnswer</td>
                <td>
                    <a class="btn btn-info btn-sm me-1" asp-action="Details" asp-route-id="@item.Id" title="Details">
                        <span class="bi bi-eye"></span>
                    </a>
                    <a class="btn btn-primary btn-sm me-1" asp-action="Edit" asp-route-id="@item.Id" title="Edit">
                        <span class="bi bi-pencil"></span>
                    </a>
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm" title="Delete" onclick="return confirm('Are you sure you want to delete this joke?');">
                            <span class="bi bi-trash"></span>
                        </button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
